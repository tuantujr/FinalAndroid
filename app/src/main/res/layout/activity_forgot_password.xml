<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="20dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_back"
        android:background="@drawable/circle_button_bg"
        android:contentDescription="@string/back"
        android:scaleType="centerInside"
        android:layout_marginBottom="20dp" />

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textSize="28sp"
            android:textColor="#333333"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't worry, we'll help you reset your password"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <!-- ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Step Indicator -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="30dp">

                <!-- Step 1 -->
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/step_active_bg"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="#7494ec"
                    android:layout_marginHorizontal="10dp"
                    android:layout_gravity="center_vertical" />

                <!-- Step 2 -->
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/step_inactive_bg"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="#999999"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="#dddddd"
                    android:layout_marginHorizontal="10dp"
                    android:layout_gravity="center_vertical" />

                <!-- Step 3 -->
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/step_inactive_bg"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="#999999"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Step 1: Enter Email -->
            <LinearLayout
                android:id="@+id/layoutStep1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter your email address"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp" />

                <!-- Email Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_input_bg"
                    android:padding="15dp"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_email"
                        android:contentDescription="@string/email" />

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Enter your email"
                        android:inputType="textEmailAddress"
                        android:paddingStart="15dp"
                        android:textColor="#333333"
                        android:textColorHint="#888888"
                        android:textSize="16sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnSendOtp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Send OTP"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_bg" />
            </LinearLayout>

            <!-- Step 2: Verify OTP -->
            <LinearLayout
                android:id="@+id/layoutStep2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verify OTP Code"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter the 6-digit OTP code sent to your email"
                    android:textSize="13sp"
                    android:textColor="#888888"
                    android:layout_marginBottom="20dp" />

                <!-- OTP Input Fields -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="20dp">

                    <EditText
                        android:id="@+id/etOtp1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="22sp"
                        android:textColor="#333333"
                        android:background="@drawable/otp_input_bg"
                        android:layout_marginHorizontal="4dp"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/etOtp2"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="22sp"
                        android:textColor="#333333"
                        android:background="@drawable/otp_input_bg"
                        android:layout_marginHorizontal="4dp"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/etOtp3"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="22sp"
                        android:textColor="#333333"
                        android:background="@drawable/otp_input_bg"
                        android:layout_marginHorizontal="4dp"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/etOtp4"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="22sp"
                        android:textColor="#333333"
                        android:background="@drawable/otp_input_bg"
                        android:layout_marginHorizontal="4dp"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/etOtp5"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="22sp"
                        android:textColor="#333333"
                        android:background="@drawable/otp_input_bg"
                        android:layout_marginHorizontal="4dp"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/etOtp6"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="22sp"
                        android:textColor="#333333"
                        android:background="@drawable/otp_input_bg"
                        android:layout_marginHorizontal="4dp"
                        android:textAlignment="center" />
                </LinearLayout>

                <!-- Resend OTP -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Didn't receive? "
                        android:textColor="#666666"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvResendOtp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resend"
                        android:textColor="#7494ec"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnVerifyOtp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Verify OTP"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_bg" />
            </LinearLayout>

            <!-- Step 3: Reset Password -->
            <LinearLayout
                android:id="@+id/layoutStep3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create New Password"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp" />

                <!-- New Password Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_input_bg"
                    android:padding="15dp"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_lock"
                        android:contentDescription="@string/password" />

                    <EditText
                        android:id="@+id/etNewPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="New Password"
                        android:inputType="textPassword"
                        android:paddingStart="15dp"
                        android:textColor="#333333"
                        android:textColorHint="#888888"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/ivTogglePassword"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_eye_off"
                        android:contentDescription="@string/toggle_password" />
                </LinearLayout>

                <!-- Confirm Password Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_input_bg"
                    android:padding="15dp"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_lock"
                        android:contentDescription="@string/confirm_password" />

                    <EditText
                        android:id="@+id/etConfirmPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:paddingStart="15dp"
                        android:textColor="#333333"
                        android:textColorHint="#888888"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/ivToggleConfirmPassword"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_eye_off"
                        android:contentDescription="@string/toggle_password" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnResetPassword"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Reset Password"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_bg" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
