<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="20dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_back"
        android:background="@drawable/circle_button_bg"
        android:contentDescription="@string/back"
        android:scaleType="centerInside"
        android:layout_marginBottom="20dp" />

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify Your Email"
            android:textSize="28sp"
            android:textColor="#333333"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the OTP code sent to your email"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="example@email.com"
            android:textSize="13sp"
            android:textColor="#7494ec"
            android:layout_marginTop="8dp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- OTP Input Fields -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="30dp">

                <!-- OTP Digit 1 -->
                <EditText
                    android:id="@+id/etOtp1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="24sp"
                    android:textColor="#333333"
                    android:background="@drawable/otp_input_bg"
                    android:layout_marginHorizontal="6dp"
                    android:textAlignment="center" />

                <!-- OTP Digit 2 -->
                <EditText
                    android:id="@+id/etOtp2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="24sp"
                    android:textColor="#333333"
                    android:background="@drawable/otp_input_bg"
                    android:layout_marginHorizontal="6dp"
                    android:textAlignment="center" />

                <!-- OTP Digit 3 -->
                <EditText
                    android:id="@+id/etOtp3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="24sp"
                    android:textColor="#333333"
                    android:background="@drawable/otp_input_bg"
                    android:layout_marginHorizontal="6dp"
                    android:textAlignment="center" />

                <!-- OTP Digit 4 -->
                <EditText
                    android:id="@+id/etOtp4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="24sp"
                    android:textColor="#333333"
                    android:background="@drawable/otp_input_bg"
                    android:layout_marginHorizontal="6dp"
                    android:textAlignment="center" />

                <!-- OTP Digit 5 -->
                <EditText
                    android:id="@+id/etOtp5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="24sp"
                    android:textColor="#333333"
                    android:background="@drawable/otp_input_bg"
                    android:layout_marginHorizontal="6dp"
                    android:textAlignment="center" />

                <!-- OTP Digit 6 -->
                <EditText
                    android:id="@+id/etOtp6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="24sp"
                    android:textColor="#333333"
                    android:background="@drawable/otp_input_bg"
                    android:layout_marginHorizontal="6dp"
                    android:textAlignment="center" />
            </LinearLayout>

            <!-- Resend OTP -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Didn't receive the code? "
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvResendOtp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resend"
                    android:textColor="#7494ec"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- Timer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="30dp">

                <TextView
                    android:id="@+id/tvTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resend code in 00:30"
                    android:textColor="#888888"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Verify Button -->
            <Button
                android:id="@+id/btnVerify"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Verify OTP"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_bg"
                android:layout_marginBottom="15dp" />

            <!-- Change Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wrong email? "
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvChangeEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Email"
                    android:textColor="#7494ec"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
